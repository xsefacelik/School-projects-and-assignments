<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>DEU Airlines</title>

    <link rel="stylesheet" href="/global.css" />
    <link rel="stylesheet" href="/game.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Airline+Font"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,500;0,800;1,900&display=swap"
      rel="stylesheet"
    />

    <script src="/game.js"></script>
  </head>
  <body>
    <header>
      <nav id="navbar">
        <div onclick="exit()" class="exit button">Exit</div>
        <div class="title logo-deu"></div>
        <div id="username-header" class="username button">Username</div>
      </nav>
    </header>
    <section>
      <div class="left-sidebar"></div>
      <div class="options">
        <button onclick="openEmployeeOptions()">Employee</button>
        <button onclick="openAirplaneOptions()">Plane</button>
        <button onclick="openAirportOptions()">Airport</button>
        <button onclick="openFlightOptions()">Flight</button>
        <button onclick="openBankOptions()">Bank</button>
      </div>
      <div class="action"></div>
      <div class="right-sidebar">
        <div class="next-day-info"></div>
        <button class="next-day-button" onclick="nextDay()">NEXT DAY</div>
      </div>
    </section>
    <footer>
      <div class="company-info">
      <div id="day-footer" class="company-info-element"></div>
      <div id="airplanes-footer" class="company-info-element"></div>
      <div id="airports-footer" class="company-info-element"></div>
      <div id="employees-footer" class="company-info-element"></div>
      <div id="flights-footer" class="company-info-element"></div>
      <div id="tickets-footer" class="company-info-element"></div>
      <div id="bank-outgoing-footer" class="company-info-element"></div>
      <div id="employee-outgoing-footer" class="company-info-element"></div>
      <div id="money-footer" class="company-info-element"></div>
      </div>
    </footer>
  </body>
</html>
