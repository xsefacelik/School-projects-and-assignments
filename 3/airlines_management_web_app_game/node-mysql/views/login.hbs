<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/global.css" />
    <link rel="stylesheet" href="/login.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,500;0,800;1,900&display=swap"
      rel="stylesheet"
    />
    <script src="/login.js"></script>
  </head>
  <body>
    <div class="box">
      <div onclick="back_button()" class="back-button"><i
          class="fa-solid fa-left-long"
        ></i></div>

      <div class="items-first">
        <div id="head"><h1>WELCOME TO DEUAIRLINES</h1></div>
        <div id="buttons">
          <div id="sign-in">
            <button onclick="sign_in()"><i class="fa-solid fa-right-to-bracket">
                Log In</i></button>
          </div>
          <div id="empty"></div>
          <div id="join-now">
            <button onclick="join()"><i class="fa-solid fa-user-plus">
                Join Now</i></button>
          </div>
        </div>
      </div>

      <div class="items-second">
        <div class="title">
          <h1>Log In</h1>
        </div>
        <div class="form">
          <form>
            <div class="username">
              <label for="username">Username<br /></label>
              <input type="username" name="username" id="username" />
            </div>
            <div class="password">
              <label for="password">Password<br /></label>
              <input type="password" name="password" id="password" />
            </div>
          </form>
          <div class="log-in">
            <button onclick="div_sign_in()"><i
                class="fa-solid fa-right-to-bracket"
              > Log In</i></button>
          </div>
        </div>
      </div>

      <div class="items-third">
        <div class="title">
          <h1>Log In</h1>
        </div>
        <div class="form">
          <form>
            <div class="username">
              <label for="username1">Username<br /></label>
              <input type="username1" name="username1" id="username1" />
            </div>
            <div class="password">
              <label for="password1">Password<br /></label>
              <input type="password" name="password1" id="password1" />
            </div>
            <div class="password">
              <label for="confirmed_password">Confirm Password<br /></label>
              <input
                type="password"
                name="confirmed_password"
                id="confirmed_password"
              />
            </div>
          </form>
          <div class="log-in">
            <button onclick="div_join()"><i class="fa-solid fa-user-plus">
                Join Now</i></button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>